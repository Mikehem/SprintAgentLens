# Environment Configuration Example
# Copy this to .env and update with your values

# Application Environment
NODE_ENV=development
PORT=3000
HOST=0.0.0.0

# Database Configuration
# MySQL State Database
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_DATABASE=sprintagentlens_dev
MYSQL_USER=root
MYSQL_PASSWORD=
MYSQL_ROOT_PASSWORD=secure-password

# ClickHouse Analytics Database  
CLICKHOUSE_HOST=localhost
CLICKHOUSE_PORT=8123
CLICKHOUSE_DATABASE=sprintagentlens_analytics
CLICKHOUSE_USER=default
CLICKHOUSE_PASSWORD=

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_URL=redis://localhost:6379

# Authentication & Security
JWT_SECRET=your-super-secure-jwt-secret-change-in-production
JWT_EXPIRE_TIME=24h
BCRYPT_ROUNDS=12
SESSION_EXPIRE_TIME=86400
ACCOUNT_LOCKOUT_ATTEMPTS=5
ACCOUNT_LOCKOUT_DURATION=900

# CORS Configuration
CORS_ORIGIN=http://localhost:5173,http://localhost:3000
CORS_CREDENTIALS=true

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=15

# AWS S3 Configuration (for file storage)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-access-key-id
AWS_SECRET_ACCESS_KEY=your-secret-access-key
AWS_S3_BUCKET=sprintagentlens-attachments

# LLM Provider API Keys (for chat completions)
OPENAI_API_KEY=your-openai-api-key
ANTHROPIC_API_KEY=your-anthropic-api-key
GOOGLE_GEMINI_API_KEY=your-google-gemini-api-key

# Logging Configuration
LOG_LEVEL=debug
LOG_FORMAT=pretty
LOG_FILE_ENABLED=true
LOG_FILE_PATH=./logs/app.log

# Monitoring & Observability
OTEL_ENABLED=false
OTEL_ENDPOINT=http://localhost:4317
HEALTH_CHECK_INTERVAL=30000

# Background Jobs
BULL_REDIS_URL=redis://localhost:6379
JOB_CONCURRENCY=10
JOB_RETRY_ATTEMPTS=3

# Feature Toggles
AUTH_ENABLED=true
AUTH_MODE=database
ANALYTICS_ENABLED=true
EXTERNAL_TELEMETRY=false
DEBUG_ENABLED=true

# Development Settings
DEVELOPMENT_SEED_DATA=true
DEVELOPMENT_RESET_DB=false